description "Supervisor service"
start on runlevel [2345]
stop on runlevel [!2345]
start on filesystem and started networking
respawn
chdir <%= "#{@deploy_to}/current" %>
setuid <%= @user %>
setgid <%= @group %>
<% if @environment %>
<% @environment.each do |key,val| %>
<%= key %>=<%= val %>
<% end %>
<% end %>

exec <%= @supervisord %> --nodaemon
